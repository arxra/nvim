{
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "rootPatterns": [
        "compile_flags.txt",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "c",
        "cpp",
        "objc",
        "objcpp"
      ]
    }
  },
  "python.linting.pylintArgs": [
    "--max-line-length=120",
    "--load-plugins",
    "pylint_django"
  ],
  "cSpellExt.enableDictionaries": [
    "swedish"
  ],
  "cSpell.language": "en,sv",
  "cSpell.maxNumberOfProblems": 100,
  "cSpell.numSuggestions": 12,
  "cSpell.minWordLength": 3,
  "cSpell.enabledLanguageIds": [
    "markdown",
    "latex",
    "tex",
    "vimwiki",
    "plaintext",
    "yml"
  ],
  "java.errors.incompleteClasspath.severity": "ignore"
}
