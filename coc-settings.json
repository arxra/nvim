{
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "rootPatterns": [
        "compile_flags.txt",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "c",
        "cpp",
        "objc",
        "objcpp"
      ]
    }
  },
  "python.linting.pylintArgs": [
    "--max-line-length=120",
    "--load-plugins",
    "pylint_django"
  ],
  "java.errors.incompleteClasspath.severity": "ignore"
}
